        // 이벤트 리스너
        document.addEventListener('DOMContentLoaded', function() {
            updateProgress();
            
            const allOptions = document.querySelectorAll('.option');
            allOptions.forEach(option => {
                option.addEventListener('click', function() {
                    const questionSection = this.closest('.question-section');
                    const questionNum = parseInt(questionSection.dataset.question);
                    const score = parseInt(this.dataset.score);
                    const area = this.dataset.area;
                    
                    questionSection.querySelectorAll('.option').forEach(opt => {
                        opt.classList.remove('selected');
                    });
                    
                    this.classList.add('selected');
                    answers[questionNum] = { score, area };
                    
                    setTimeout(() => {
                        nextQuestion();
                    }, 500);
                });
            });
        });

        function nextQuestion() {
            if (currentQuestion < totalQuestions) {
                document.querySelector(`.question-section[data-question="${currentQuestion}"]`).classList.remove('active');
                currentQuestion++;
                document.querySelector(`.question-section[data-question="${currentQuestion}"]`).classList.add('active');
                updateProgress();
                window.scrollTo({ top: 0, behavior: 'smooth' });
            } else {
                calculateResult();
            }
        }

        function updateProgress() {
            const progress = (currentQuestion / totalQuestions) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
        }

        function calculateResult() {
            let onlineScore = 0;
            let offlineScore = 0;
            let contentScore = 0;

            for (let i = 1; i <= totalQuestions; i++) {
                if (answers[i]) {
                    const { score, area } = answers[i];
                    if (area === 'online') onlineScore += score;
                    else if (area === 'offline') offlineScore += score;
                    else if (area === 'content') contentScore += score;
                }
            }

            const onlinePercent = Math.round((onlineScore / 30) * 100);
            const offlinePercent = Math.round((offlineScore / 30) * 100);
            const contentPercent = Math.round((contentScore / 30) * 100);
            const avgPercent = Math.round((onlinePercent + offlinePercent + contentPercent) / 3);

            let stage = '';
            if (avgPercent < 30) {
                stage = 'stage1';
            } else if (avgPercent < 55) {
                stage = 'stage2';
            } else if (avgPercent < 75) {
                stage = 'stage3';
            } else {
                stage = 'stage4';
            }

            showResult(stage, onlineScore, offlineScore, contentScore, onlinePercent, offlinePercent, contentPercent);
        }

        function showResult(stage, onlineScore, offlineScore, contentScore, onlinePercent, offlinePercent, contentPercent) {
            const data = strategyData[stage];

            document.getElementById('resultTitle').textContent = data.title;
            document.getElementById('resultSubtitle').textContent = data.subtitle;

            document.getElementById('onlineScore').textContent = onlineScore + '점';
            document.getElementById('offlineScore').textContent = offlineScore + '점';
            document.getElementById('contentScore').textContent = contentScore + '점';

            document.getElementById('onlineLevel').textContent = getLevel(onlinePercent);
            document.getElementById('offlineLevel').textContent = getLevel(offlinePercent);
            document.getElementById('contentLevel').textContent = getLevel(contentPercent);

            // 실행 단계
            const actionSteps = document.getElementById('actionSteps');
            actionSteps.innerHTML = '';
            data.steps.forEach(step => {
                const div = document.createElement('div');
                div.className = 'action-step';
                div.setAttribute('data-step', step.step);
                div.innerHTML = `
                    <div class="action-step-title">${step.title}</div>
                    <div class="action-step-content">${step.content}</div>
                    <div class="action-examples"><strong>구체적 실행 방법</strong>${step.examples}</div>
                `;
                actionSteps.appendChild(div);
            });

            // 추천 채널
            const channelGrid = document.getElementById('channelGrid');
            channelGrid.innerHTML = '';
            data.channels.forEach(channel => {
                const div = document.createElement('div');
                div.className = 'channel-card';
                div.innerHTML = `
                    <div class="channel-title">${channel.title}</div>
                    <div class="channel-content">${channel.content}</div>
                    <ul class="channel-list">
                        ${channel.tips.map(tip => `<li>${tip}</li>`).join('')}
                    </ul>
                `;
                channelGrid.appendChild(div);
            });

            document.querySelector('.survey-card').style.display = 'none';
            document.getElementById('resultSection').classList.add('active');
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function getLevel(percent) {
            if (percent >= 80) return '우수';
            if (percent >= 60) return '양호';
            if (percent >= 40) return '보통';
            if (percent >= 20) return '미흡';
            return '개선필요';
        }

        function restart() {
            currentQuestion = 1;
            answers = {};

            document.querySelectorAll('.option').forEach(opt => {
                opt.classList.remove('selected');
            });

            document.querySelectorAll('.question-section').forEach((section, index) => {
                if (index === 0) {
                    section.classList.add('active');
                } else {
                    section.classList.remove('active');
                }
            });

            document.getElementById('progressFill').style.width = '5.56%';
            document.getElementById('resultSection').classList.remove('active');
            document.querySelector('.survey-card').style.display = 'block';
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        updateProgress();
    </script>
</body>
</html>
