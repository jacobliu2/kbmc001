    <script>
        const answers = {};
        let currentQuestion = 1;
        const totalQuestions = 12;

        const questionResources = {
            1: ['infrastructure'],
            2: ['infrastructure'],
            3: ['infrastructure'],
            4: ['online'],
            5: ['online'],
            6: ['online'],
            7: ['data'],
            8: ['data'],
            9: ['data'],
            10: ['automation'],
            11: ['automation'],
            12: ['automation']
        };

        document.querySelectorAll('.option').forEach(option => {
            option.addEventListener('click', function() {
                const questionSection = this.closest('.question-section');
                const questionNum = parseInt(questionSection.dataset.question);
                const score = parseInt(this.dataset.score);
                
                questionSection.querySelectorAll('.option').forEach(opt => {
                    opt.classList.remove('selected');
                });
                
                this.classList.add('selected');
                answers[questionNum] = score;
                
                // ì¦‰ì‹œ ìŠ¤í¬ë¡¤
                window.scrollTo({ top: 0, behavior: 'smooth' });
                
                setTimeout(() => {
                    if (questionNum < totalQuestions) {
                        nextQuestion();
                    } else {
                        showResults();
                    }
                }, 500);
            });
        });

        function updateProgress() {
            const progress = (currentQuestion / totalQuestions) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
            document.getElementById('progressText').textContent = `ì§ˆë¬¸ ${currentQuestion} / ${totalQuestions}`;
        }

        function nextQuestion() {
            document.querySelector(`[data-question="${currentQuestion}"]`).classList.remove('active');
            currentQuestion++;
            document.querySelector(`[data-question="${currentQuestion}"]`).classList.add('active');
            updateProgress();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function calculateScores() {
            const scores = {
                infrastructure: 0,
                online: 0,
                data: 0,
                automation: 0
            };

            for (let q = 1; q <= totalQuestions; q++) {
                const score = answers[q] || 0;
                const resources = questionResources[q];
                
                resources.forEach(resource => {
                    scores[resource] += score;
                });
            }

            // ê° ì˜ì—­ë‹¹ 3ë¬¸í•­ì´ë¯€ë¡œ ë°±ë¶„ìœ¨ë¡œ í™˜ì‚°
            return {
                infrastructure: Math.round((scores.infrastructure / 15) * 100),
                online: Math.round((scores.online / 15) * 100),
                data: Math.round((scores.data / 15) * 100),
                automation: Math.round((scores.automation / 15) * 100)
            };
        }

        function generateConsultantComment(scores) {
            const avgScore = (scores.infrastructure + scores.online + scores.data + scores.automation) / 4;
            let comment = '';

            // ì¢…í•© í‰ê°€
            if (avgScore >= 75) {
                comment += 'ê·€ì‚¬ëŠ” ìŠ¤ë§ˆíŠ¸ìƒì ìœ¼ë¡œì˜ ë””ì§€í„¸ ì „í™˜ì´ ë§¤ìš° ì˜ ì´ë£¨ì–´ì§„ ì„ ë„ì ì¸ ì‚¬ì—…ì¥ì…ë‹ˆë‹¤. ë†’ì€ ìˆ˜ì¤€ì˜ ë””ì§€í„¸ ì¸í”„ë¼ì™€ ë°ì´í„° í™œìš© ì—­ëŸ‰ì„ ë³´ìœ í•˜ê³  ìˆìœ¼ë©°, ìë™í™”ë¥¼ í†µí•´ ìš´ì˜ íš¨ìœ¨ì„ ê·¹ëŒ€í™”í•˜ê³  ìˆìŠµë‹ˆë‹¤.\n\n';
            } else if (avgScore >= 50) {
                comment += 'ê·€ì‚¬ëŠ” ìŠ¤ë§ˆíŠ¸ìƒì ìœ¼ë¡œì˜ ì „í™˜ì„ ì§„í–‰ ì¤‘ì´ë©°, ì¼ë¶€ ì˜ì—­ì—ì„œ ì¢‹ì€ ì„±ê³¼ë¥¼ ë³´ì´ê³  ìˆìŠµë‹ˆë‹¤. ì·¨ì•½í•œ ì˜ì—­ì„ ì§‘ì¤‘ ë³´ì™„í•œë‹¤ë©´ ì™„ì „í•œ ìŠ¤ë§ˆíŠ¸ìƒì ìœ¼ë¡œ ë„ì•½í•  ìˆ˜ ìˆìŠµë‹ˆë‹¤.\n\n';
            } else {
                comment += 'ê·€ì‚¬ëŠ” ìŠ¤ë§ˆíŠ¸ìƒì ìœ¼ë¡œì˜ ì „í™˜ ì´ˆê¸° ë‹¨ê³„ì— ìˆìŠµë‹ˆë‹¤. ì²´ê³„ì ì¸ ë””ì§€í„¸í™” ê³„íšì„ ìˆ˜ë¦½í•˜ê³  ë‹¨ê³„ì ìœ¼ë¡œ ì¶”ì§„í•œë‹¤ë©´, ê²½ìŸë ¥ ìˆëŠ” ìŠ¤ë§ˆíŠ¸ìƒì ìœ¼ë¡œ ì„±ì¥í•  ìˆ˜ ìˆìŠµë‹ˆë‹¤.\n\n';
