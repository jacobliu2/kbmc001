        function displayRecommendations(scores) {
            const recommendations = [];
            const avgScore = (scores.infrastructure + scores.online + scores.data + scores.automation) / 4;

            // 1ë‹¨ê³„: ê¸°ì´ˆ ìŠ¤ë§ˆíŠ¸í™” (40ì  ë¯¸ë§Œ)
            if (avgScore < 40 || scores.infrastructure < 40 || scores.online < 40 || scores.data < 40 || scores.automation < 40) {
                let step1Content = '<strong>ğŸ“± ì´ê²ƒë¶€í„° ì‹œì‘í•˜ì„¸ìš”</strong><br><br>';
                
                if (scores.infrastructure < 40) {
                    step1Content += '<strong>1. ìŠ¤ë§ˆíŠ¸ ê³„ì‚°ëŒ€(POS) ì„¤ì¹˜</strong><br>';
                    step1Content += 'ì¹´ë“œë‹¨ë§ê¸° ëŒ€ì‹  íƒœë¸”ë¦¿ ê³„ì‚°ëŒ€ë¥¼ ì“°ë©´ ë§¤ì¶œì´ ìë™ìœ¼ë¡œ ì§‘ê³„ë˜ê³  íœ´ëŒ€í°ì—ì„œ ì–¸ì œë“  í™•ì¸í•  ìˆ˜ ìˆìŠµë‹ˆë‹¤. ì¥ë¶€ ì“°ëŠ” ì‹œê°„ì´ í•˜ë£¨ 2ì‹œê°„ ì¤„ì–´ë“¤ê³ , ì¬ê³ ë„ ìë™ìœ¼ë¡œ ë¹ ì§‘ë‹ˆë‹¤. 200ë§Œì›ì§œë¦¬ë¥¼ ì •ë¶€ ì§€ì›ë°›ìœ¼ë©´ 60ë§Œì›ì— ê°€ëŠ¥í•©ë‹ˆë‹¤.<br><br>';
                    
                    step1Content += '<strong>2. ë¬´ì¸ ì£¼ë¬¸ê¸°(í‚¤ì˜¤ìŠ¤í¬) ì„¤ì¹˜</strong><br>';
                    step1Content += 'í…Œì´ë¸”ì—ì„œ ì†ë‹˜ì´ ì§ì ‘ ì£¼ë¬¸í•˜ë©´ ì§ì› 1ëª… ì¤„ì¼ ìˆ˜ ìˆì–´ìš”. ì›”ê¸‰ 200ë§Œì›ì´ ì ˆì•½ë˜ê³ , ì£¼ë¬¸ ì‹¤ìˆ˜ë„ ì—†ì–´ì§‘ë‹ˆë‹¤. ì‚¬ì§„ìœ¼ë¡œ ë©”ë‰´ë¥¼ ë³´ì—¬ì£¼ë‹ˆê¹Œ ì™¸êµ­ì¸ë„ ì‰½ê²Œ ì£¼ë¬¸í•©ë‹ˆë‹¤. 150ë§Œì›ì§œë¦¬ë¥¼ 45ë§Œì›ì— ê°€ëŠ¥í•©ë‹ˆë‹¤.<br><br>';
                }
                
                if (scores.online < 40) {
                    step1Content += '<strong>3. ë°°ë‹¬ì•± ì…ì í•˜ê¸°</strong><br>';
                    step1Content += 'ë°°ë¯¼, ì¿ íŒ¡ì´ì¸ , ìš”ê¸°ìš”ì— ë“¤ì–´ê°€ë©´ ë°˜ê²½ 3km ì•ˆì— ì‚¬ëŠ” 5ë§Œëª…í•œí…Œ ë‚´ ê°€ê²Œê°€ ë³´ì…ë‹ˆë‹¤. ë¹„ ì˜¤ëŠ” ë‚ ì´ë‚˜ ë°¤ì—ë„ ì£¼ë¬¸ì´ ë“¤ì–´ì™€ì„œ ë§¤ì¶œì´ 30% ëŠ˜ì–´ë‚©ë‹ˆë‹¤. ì…ì ë¹„ 50ë§Œì›ì„ ë¬´ë£Œë¡œ ì§€ì›ë°›ì„ ìˆ˜ ìˆìŠµë‹ˆë‹¤.<br><br>';
                    
